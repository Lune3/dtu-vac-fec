generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  Id String @id @default(uuid())
  email String @unique
  userId BigInt @unique
  comment Comment[]
  isMod Boolean
  isAdmin Boolean
  isBanned Boolean
}

model Course{
  Id String @id @default(uuid())
  name String @unique
  comment Comment[]
}

model Comment{
  Id String @id @default(uuid())
  title String
  commentDate DateTime @default(now())
  commentCourse String
  course Course? @relation(fields: [commentCourse],references: [Id])
  teacherName String
  gradeObtain String
  commentUser String?
  user User? @relation(fields: [commentUser], references: [Id])
}
