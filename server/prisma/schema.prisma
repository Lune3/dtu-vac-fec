generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  Id String @id @default(uuid())
  name String @unique
  comments Comment[]
}

model Comment {
  Id String @id @default(uuid())
  courseComment String
  course Course @relation(fields: [courseId], references: [Id])
  courseId String
  commentDate DateTime @default(now())
  teacherName String
  gradeObtain String
}
